<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <!-- Default / Light -->
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="HyperlinkColor" Color="DarkBlue" />
            <SolidColorBrush x:Key="HyperlinkHighlightColor" Color="Blue" />
            <SolidColorBrush x:Key="HyperlinkVisitedColor" Color="Purple" />
        </ResourceDictionary>

        <!-- Dark -->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="HyperlinkColor" Color="CornflowerBlue" />
            <SolidColorBrush x:Key="HyperlinkHighlightColor" Color="Blue" />
            <SolidColorBrush x:Key="HyperlinkVisitedColor" Color="Purple" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>